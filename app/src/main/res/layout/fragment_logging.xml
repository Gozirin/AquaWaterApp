<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/select_background"
    android:backgroundTintMode="src_over"
    android:backgroundTint="#66000000"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="bottom"
    tools:context=".feature.onboarding.LoggingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/explore_quality"
            android:textSize="30sp"
            android:fontFamily="@font/manrope"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/water_with_excellence"
            android:textSize="30sp"
            android:fontFamily="@font/manrope"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/the_water_quality_is_in_excellent_condition"
            android:textSize="16sp"
            android:fontFamily="@font/manrope_light"
            android:textColor="@color/white"/>
    </LinearLayout>

    <TextView
        android:id="@+id/logging_consumer_tv"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="44dp"
        android:text="@string/consumer"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@color/main_blue"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/logging_supplier_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/supplier"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/ic_frame_outline"
        android:textSize="20sp" />

</LinearLayout>