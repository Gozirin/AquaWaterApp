<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".feature.consumer.ui.consumptionFragments.ConsumerChangePasswordScreenFragment">


    <ImageView
        android:id="@+id/change_password_screen_imageButton1"
        android:layout_width="37dp"
        android:layout_height="29dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="52dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white" />

    <TextView
        android:id="@+id/change_password_screen_textView2"
        android:layout_width="54dp"
        android:layout_height="24dp"
        android:layout_marginTop="56dp"
        android:text="@string/back"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:fontFamily="@font/manrope_light"
        app:layout_constraintStart_toEndOf="@+id/change_password_screen_imageButton1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/change_password_screen_textView3"
        android:layout_width="188dp"
        android:layout_height="30dp"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/manrope_bold"
        android:text="@string/settings"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toEndOf="@+id/change_password_screen_textView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/change_password_screen_textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/manrope_bold"
        android:text="@string/change_password"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/change_password_screen_textView3"
        app:layout_constraintHorizontal_bias="0.132"
        app:layout_constraintStart_toStartOf="@+id/change_password_screen_imageButton1"
        app:layout_constraintTop_toBottomOf="@+id/change_password_screen_textView3" />

    <TextView
        android:id="@+id/change_password_screen_textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/manrope_light"
        android:text="@string/current_password"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/change_password_screen_textView4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/change_password_screen_textView4"
        app:layout_constraintTop_toBottomOf="@+id/change_password_screen_textView4" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/change_password_screen_textInputLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:padding="1dp"

        app:hintEnabled="false"
        android:background="@drawable/shapes"

        app:layout_constraintEnd_toEndOf="@+id/change_password_screen_textView5"
        app:layout_constraintStart_toStartOf="@+id/change_password_screen_textView5"
        app:layout_constraintTop_toBottomOf="@+id/change_password_screen_textView5"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:enabled="true"
            android:hint="@string/current_password"
            app:passwordToggleEnabled="true" />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/change_password_screen_textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/manrope_light"
        android:text="@string/new_password"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/change_password_screen_textInputLayout1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/change_password_screen_textInputLayout1"
        app:layout_constraintTop_toBottomOf="@+id/change_password_screen_textInputLayout1" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:padding="1dp"
        app:hintEnabled="false"
        android:background="@drawable/shapes"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/change_password_screen_textView7"
        app:layout_constraintStart_toStartOf="@+id/change_password_screen_textView7"
        app:layout_constraintTop_toBottomOf="@+id/change_password_screen_textView7"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="@string/new_password" />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/change_password_screen_textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/manrope_light"
        android:text="@string/confirm_password"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/textInputLayout2"
        app:layout_constraintHorizontal_bias="0.797"
        app:layout_constraintStart_toStartOf="@+id/textInputLayout2"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:padding="1dp"
        app:hintEnabled="false"
        android:background="@drawable/shapes"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/change_password_screen_textView8"
        app:layout_constraintStart_toStartOf="@+id/change_password_screen_textView8"
        app:layout_constraintTop_toBottomOf="@+id/change_password_screen_textView8"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="@string/confirm_password" />
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/change_password_screen_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="17dp"
        android:layout_marginTop="24dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/save"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textInputLayout4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textInputLayout4"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout4" />


</androidx.constraintlayout.widget.ConstraintLayout>

