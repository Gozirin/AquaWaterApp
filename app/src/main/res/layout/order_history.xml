<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardElevation="10mm">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp">

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/supplier_order_history_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:roundPercent="1"
                app:srcCompat="@drawable/water_circle" />

            <TextView
                android:id="@+id/supplier_order_history_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="17dp"
                android:layout_marginTop="11dp"
                android:layout_toEndOf="@+id/supplier_order_history_image"
                android:fontFamily="@font/manrope_regular"
                android:text="Arizona Inc."
                android:textColor="#21334F"
                android:textFontWeight="400"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/supplier_order_history_water_pack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/supplier_order_history_company"
                android:layout_marginStart="16dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/supplier_order_history_image"
                android:fontFamily="@font/manrope_light"
                android:lineHeight="16.36dp"
                android:text="6 packs of big bottle water"
                android:textColor="#21334F"
                android:textFontWeight="300"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/supplier_order_history_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="29dp"
                android:background="#2238B000"
                android:fontFamily="@font/manrope_medium"
                android:lineHeight="19.36dp"
                android:text="@string/delivered"
                android:textColor="#38B000"
                android:textFontWeight="500"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="RelativeOverlap" />

            <TextView
                android:id="@+id/supplier_order_history_delivery_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/supplier_order_history_delivery"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="29dp"
                android:fontFamily="@font/manrope_regular"
                android:lineHeight="16.39dp"
                android:text="@string/_23_3_2022"
                android:textFontWeight="400"
                android:textSize="12sp" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
