<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.onboarding.screens.FirstOnboardingScreenFragment">

    <ImageView
        android:id="@+id/ivOnboardingScreen"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/ic_online_bro_1"
        android:background="#0D147DF5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvOnboardingTitle"
        android:layout_width="257dp"
        android:layout_height="59dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/manrope"
        android:gravity="center"
        android:text="@string/firstOBTitle"
        android:textColor="#21334F"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivOnboardingScreen" />

    <TextView
        android:id="@+id/tvOnboardingText"
        android:layout_width="301dp"
        android:layout_height="69dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/manrope_regular"
        android:gravity="center"
        android:text="@string/firstOBText"
        android:textColor="#21334F"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvOnboardingTitle" />


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/pageIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="79dp"
        app:layout_constraintBottom_toTopOf="@+id/btnNextOne"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvOnboardingText"
        app:tabBackground="@drawable/onboarding_viewpager_selector_blue"
        app:tabGravity="center"
        app:tabIndicatorHeight="0dp" />

    <TextView
        android:id="@+id/tvSkip1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="64dp"
        android:fontFamily="@font/manrope_regular"
        android:text="Skip"
        android:textColor="#21334F"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNextOne"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="48dp"
        android:background="#147DF5"
        android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
        android:gravity="center"
        android:paddingStart="30dp"
        android:paddingEnd="40dp"
        android:text="Next"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="TextContrastCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>