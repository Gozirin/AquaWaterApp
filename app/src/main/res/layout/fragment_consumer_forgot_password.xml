<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".feature.login_and_registration.ConsumerForgotPasswordFragment">

    <ImageView
        android:id="@+id/forgot_password_imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/forgot_password_textView1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/actionModeCloseDrawable"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/forgot_password_textView1"
        android:layout_width="41dp"
        android:layout_height="28dp"
        android:layout_marginTop="40dp"
        android:text="@string/back"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintHorizontal_bias="0.145"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/forgot_password_textView2"
        android:layout_width="381dp"
        android:layout_height="31dp"
        android:layout_marginHorizontal="16dp"
        android:layout_margin="1dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/manrope_bold"
        android:text="@string/reset_password"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/forgot_password_textView1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/forgot_password_imageButton1"
        app:layout_constraintTop_toBottomOf="@+id/forgot_password_textView1" />

    <TextView
        android:id="@+id/forgot_password_textView3"
        android:layout_width="382dp"
        android:layout_height="57dp"
        android:layout_margin="1dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/manrope_light"
        android:text="@string/enter_the_email_associated_with_your_account_and_nwe_ll_send_an_email_with_instruction_to_reset_your_npassword"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/forgot_password_textView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/forgot_password_textView2"
        app:layout_constraintTop_toBottomOf="@+id/forgot_password_textView2" />

    <TextView
        android:id="@+id/forgot_password_textView4"
        android:layout_width="378dp"
        android:layout_height="27dp"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        android:fontFamily="@font/manrope_light"
        android:text="@string/consumer_signup_text_view_email"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/forgot_password_textView3"
        app:layout_constraintStart_toStartOf="@+id/forgot_password_textView3"
        app:layout_constraintTop_toBottomOf="@+id/forgot_password_textView3" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/forgot_password_textInputLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:hintEnabled="false"
        android:layout_marginTop="29dp"
        app:layout_constraintEnd_toEndOf="@+id/forgot_password_textView3"
        app:layout_constraintStart_toStartOf="@+id/forgot_password_textView3"
        app:layout_constraintTop_toTopOf="@+id/forgot_password_textView4">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/forgot_password_EditTextInputLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_rectangle"
            android:hint="@string/abayomitunde_gmail_com" />
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/forgot_password_button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_margin="14dp"
        android:backgroundTint="#2196F3"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        android:text="@string/reset_password"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/forgot_password_textInputLayout5"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="@+id/forgot_password_textInputLayout5"
        app:layout_constraintTop_toBottomOf="@+id/forgot_password_textInputLayout5"
        app:layout_constraintVertical_bias="0.038" />


</androidx.constraintlayout.widget.ConstraintLayout>