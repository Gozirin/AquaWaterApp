<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/consumer_modal_item_details_view"
    android:layout_margin="15dp"
    android:layout_height="70dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/consumer_modal_card_image_view_image"
            android:layout_width="33dp"
            android:layout_height="39dp"
            android:src="@drawable/imageamaka"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.091"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.32" />

        <TextView
            android:id="@+id/consumer_modal_card_text_view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pearl Somto"
            android:fontFamily="@font/manrope_bold"
            android:textFontWeight="700"
            android:textColor="@color/black"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.061"
            app:layout_constraintStart_toEndOf="@+id/consumer_modal_card_image_view_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.279" />

        <TextView
            android:id="@+id/consumer_modal_card_text_view_street_name"
            android:layout_width="69dp"
            android:layout_height="16dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/manrope"
            android:text="Egbeda, Lagos"
            android:textColor="@color/black"
            android:textFontWeight="400"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/consumer_modal_card_text_view_name"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/consumer_modal_card_text_view_name"
            app:layout_constraintTop_toBottomOf="@+id/consumer_modal_card_text_view_name"
            app:layout_constraintVertical_bias="0.19" />

        <ImageView
            android:id="@+id/consumer_modal_card_image_view_next_icon"
            android:layout_width="21dp"
            android:layout_height="22dp"
            android:src="@drawable/next_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.946"
            app:layout_constraintStart_toEndOf="@+id/consumer_modal_card_image_view_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.307" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>