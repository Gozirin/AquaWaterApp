<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".feature.consumer.ui.consumptionFragments.ConsumerConsumptionLevelFragment">

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:baselineAligned="false"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/consumer_consumptionLevel_fragment_back_tv"
                android:layout_width="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:textColor="#21334F"
                android:fontFamily="@font/manrope_regular"
                android:textSize="16sp"
                android:text="@string/back"
                app:drawableStartCompat="@drawable/ic_back_arrow" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/consumer_consumptionLevel_fragment_title_tv"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:paddingStart="0dp"
                android:paddingEnd="25dp"
                android:textSize="20sp"
                android:textColor="#21334F"
                android:fontFamily="@font/manrope_bold"
                android:text="@string/statistics_level"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>

   <com.google.android.material.tabs.TabLayout
       android:layout_marginStart="15dp"
       android:layout_marginEnd="15dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/consumption_tablayout"/>

    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/consumption_viewPager"/>

</LinearLayout>